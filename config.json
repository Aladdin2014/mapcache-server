{
  "api": {
    "name": "Map Cache",
    "version": {
      "major": 1,
      "minor": 1,
      "micro": 0
    },
    "authentication": {
      "strategy": "local",
      "passwordMinLength": 14
    },
    "provision": {
      "strategy": "uid"
    }
  },
  "server": {
    "token": {
      "expiration": 28800
    },
    "mongodb": {
      "host": "localhost",
      "port": 27017,
      "db": "mapcachedb",
      "poolSize": 5
    },
    "cacheDirectory": {
      "path": "/data/mapcache"
    },
    "sourceDirectory": {
      "path": "/data/mapcache/sources"
    },
    "storageLimit":8192,
    "maximumCacheSize":2048
  },
  "sourceCacheTypes": {
    "shapefile": [{"type":"geojson", "required": false}, {"type":"shapefile", "required": false}, {"type":"kml", "required": false}],
    "geojson": [{"type":"geojson", "required": false}, {"type":"shapefile", "required": false}, {"type":"kml", "required": false}],
    "xyz": [{"type":"xyz", "required": true}, {"type":"tms", "required": true, "virtual": true}, {"type":"geopackage", "required": false}, {"type":"mbtiles", "required": false}],
    "tms": [{"type":"xyz", "required": true}, {"type":"tms", "required": true, "virtual": true}, {"type":"geopackage", "required": false}, {"type":"mbtiles", "required": false}],
    "geotiff": [{"type":"xyz", "required": true}, {"type":"tms", "required": true, "virtual": true}, {"type":"geopackage", "required": false}, {"type":"mbtiles", "required": false}],
    "mbtiles": [{"type":"xyz", "required": true}, {"type":"tms", "required": true, "virtual": true}, {"type":"geopackage", "required": false}, {"type":"mbtiles", "required": false}]
  }
}
